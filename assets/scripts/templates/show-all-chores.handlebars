{{#each chores as |chore|}}

<h2> {{chore.chore_name}}

  <div class="btn-group btn-group-sm" role="group" >
  <button class="btn btn-default btn-sm delete-chore" type="button" data-id={{chore.id}}>
    delete
  </button>
  <button class="btn btn-default btn-sm finish-chore" type="button" data-id={{chore.id}}>
    done
  </button>
</div>
</h2>
    <p>
      chore id: {{chore.id}}
      interval: {{chore.chore_interval}} <br />
      last done on: {{chore.last_done}} <br />
      over due: {{chore.over_due}} <br />
    </p>
{{/each}}
